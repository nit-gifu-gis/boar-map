{
  "name": "boar-map",
  "version": "1.0.0",
  "description": "Boar Map Gifu",
  "main": "index.js",
  "repository": "https://github.com/nit-gifu-gis/boar-map.git",
  "author": "Junki Tomatsu <2018e25@edu.gifu-nct.ac.jp>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "next start",
    "postinstall": "npm run deploy",
    "deploy": "npm-run-all -p build:* cp:*",
    "dev": "npm-run-all -p next watch",
    "watch": "npm-run-all -p watch:*",
    "next": "next",
    "cp:resetcss": "cp -f node_modules/reboot.css/dist/reboot.min.css utils/resetcss/reboot.min.scss",
    "build": "npm-run-all -p build:*",
    "build:next": "next build",
    "lint:js": "eslint {pages,components,utils} --ext .js --ext .jsx --fix",
    "watch:js": "chokidar '{components,pages,scss,utils}/**/*.{js,jsx}' -c 'npm run lint:js'"
  },
  "dependencies": {
    "blueimp-canvas-to-blob": "^3.28.0",
    "isomorphic-fetch": "^2.2.1",
    "leaflet": "^1.6.0",
    "leaflet-easybutton": "^2.4.0",
    "next": "^9.3.2",
    "next-cookies": "^2.0.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-event-listener": "^0.6.6",
    "react-markdown": "^4.3.1",
    "reboot.css": "^1.0.4",
    "serialize-javascript": "^2.1.1",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@zeit/next-sass": "^1.0.1",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "chokidar-cli": "^2.1.0",
    "eslint": "^6.7.2",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "prettier": "^1.19.1",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.13.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "google",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": "off",
      "require-jsdoc": 0
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "extends": [
      "stylelint-config-rational-order",
      "stylelint-config-recommended-scss",
      "stylelint-config-prettier"
    ],
    "rules": {
      "plugin/declaration-block-no-ignored-properties": true
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-flexbugs-fixes": {}
    }
  }
}
